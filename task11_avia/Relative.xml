<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="-16dp">

        <Spinner
            android:entries="@array/cities"
            android:id="@+id/spinnerFrom"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Spinner
            android:entries="@array/cities"
            android:id="@+id/spinnerTo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/editTextDateFrom"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerFrom"
            android:layout_alignParentStart="true"
            android:hint="@string/type" />

        <EditText
            android:id="@+id/editTextDateTo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerTo"
            android:layout_alignParentEnd="true"
            android:hint="@string/type" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDateFrom"
            android:layout_alignParentStart="true"
            android:hint="@string/type" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDateTo"
            android:layout_alignParentEnd="true"
            android:hint="@string/type" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/press" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>